@model IEnumerable<FluentSpotifyApi.Model.SimplePlaylist>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.Tracks.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Public)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Collaborative)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.O)
        </th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Tracks.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Public)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collaborative)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.IsOwned)
            </td>*@
        </tr>
    }

</table>
